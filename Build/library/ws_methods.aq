import Entity;

[endpoint]
pub fn get_books_count() int
{
    var q = query();
    q.text = "FROM Entity.Book SELECT Count()";
    
    return q.scalar<int>();
}

[endpoint]
pub fn create_new_book() bool
{
    var book = BookManager.create();
    book.Caption = "Some caption";
    book.save();
    
    return true;
}
